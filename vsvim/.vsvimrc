syntax on
set ruler
set tabstop=4
set shiftwidth=4
set softtabstop=4
set incsearch
set hlsearch
set relativenumber
let mapleader = "\<Space>"
:color desert

" Set key mappings
"nnoremap <Esc> :nohlsearch<CR>
nnoremap <C-c> :nohlsearch<CR>
nnoremap <leader>; :
nnoremap <C-d> <C-d>zz
nnoremap <C-d> <C-d>zz
nnoremap n nzzzv
nnoremap N Nzzzv
vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv
nnoremap J mzJ`z
nnoremap <leader>v :vsplit<CR>
nnoremap <leader>w :close<CR>
nnoremap <leader>fw :wa <bar> only<CR>
inoremap ∑ <Esc>:w<CR>
nnoremap ∑ :w<CR>
nnoremap <leader>pv :Ex<CR>
inoremap kj <Esc>
vnoremap kj <Esc>

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap gd :vsc Edit.GoToDefinition<CR>
